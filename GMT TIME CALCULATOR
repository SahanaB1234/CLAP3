/*PROGRAM TO PRINT CURRENT TIME IN GMT FORMAT AND DATE*/

#include <time.h>//this header file is used to manupilate date and time 
#include <stdlib.h> 
#include <stdio.h> 
 
int main() { 
 
    time_t current_time; 
    char* c_time_string; 
 
    current_time = time(NULL); 
 
    /* Convert to local time format. */ 
    c_time_string = ctime(&current_time); 
 
    printf("Current time is %s", c_time_string); 
 
    return 0; 
}
